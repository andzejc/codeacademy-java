<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="lt.codeacademy.db.entity.EmployeeEntity" table="employee">
        <id name="id" type="integer" column="id">
            <generator class="identity"></generator>  <!-- identity for PostgreSQL -->
        </id>
    </class>
</hibernate-mapping>
